<header class="topbar">
  <div class="brand">
    <div class="logo" aria-hidden="true">WD</div>
    <div>
      <h1 class="title"><%= heading || 'User Accounts' %></h1>
      <p class="subtitle"><%= subheading || 'Register, log in, and manage access.' %></p>
    </div>
  </div>

  <nav class="nav">
    <% if (currentUser) { %>
      <a class="navLink" href="/profile">Profile</a>
      <% if (currentUser.role === 'manager') { %>
        <a class="navLink" href="/manager/users">Manager</a>
      <% } %>
      <form action="/logout" method="GET" style="display:inline">
        <button class="navBtn" type="submit">Log out</button>
      </form>
    <% } else { %>
      <a class="navLink" href="/login">Log in</a>
      <a class="navLink" href="/register">Create account</a>
    <% } %>
  </nav>
</header>